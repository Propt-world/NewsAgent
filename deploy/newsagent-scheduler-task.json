{
  "family": "newsagent-scheduler",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::773672087130:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "newsagent-scheduler",
      "image": "773672087130.dkr.ecr.us-east-1.amazonaws.com/newsagent-scheduler:latest",
      "portMappings": [
        {
          "containerPort": 8001,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "command": ["uvicorn", "src.scheduler.main:app", "--host", "0.0.0.0", "--port", "8001"],
      "environment": [
        {"name": "REDIS_URL", "value": "redis://auth-redis.1wedhl.0001.use1.cache.amazonaws.com:6379/1"},
        {"name": "DATABASE_URL", "value": "mongodb://newsagent:NewsAgent2024!@newsagent-docdb-cluster.cluster-cq1aycy2wfzf.us-east-1.docdb.amazonaws.com:27017/newsagent?ssl=true&ssl_cert_reqs=CERT_NONE&replicaSet=rs0&readPreference=secondaryPreferred&retryWrites=false"},
        {"name": "MONGO_DB_NAME", "value": "newsagent"},
        {"name": "MAIN_API_URL", "value": "http://newsagent-api-service:8000"},
        {"name": "SMTP_SERVER", "value": "smtp.gmail.com"},
        {"name": "SMTP_PORT", "value": "587"},
        {"name": "SMTP_EMAIL", "value": "info@propt.global"},
        {"name": "SMTP_PASSWORD", "value": "xydylqtcmhzgmbxc"}
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/newsagent-scheduler",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      }
    }
  ]
}
